<%= render "layouts/errors", object: @product %>
<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h2>New Comment</h2>
    <div class="box">
      <%= form_for [@product, @comment] do |f| %>
        <div class="form-group">
            <%= f.label :comment, class: 'control-label'  %>
            <%= f.text_field :comment, class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "Upload", class: 'btn btn-default', style: 'float:right;' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
