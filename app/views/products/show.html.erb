<div class="row">
  <div class="product-details">
    <div class="col-md-5 col-md-offset-1" style="background: url('<%= @product.photo %>') no-repeat center center; background-size: cover;">
    </div>
    <div class="col-md-4 col-md-offset-1">
      <h2><%= @product.name %></h2>
      <p><%= @product.description %></p>
      <p class="price"><%= @product.price %></p>
    </div>
  </div>
</div>

<% if @product.comments.length > 0 %>
<div class="row">
  <div class="comments col-md-6 col-md-offset-3">
    <h2>Comments</h2>
    <% @product.comments.each do |comment| %>
      <div class="comment">
          <p><%= comment.comment %></p>
      </div>
    <% end %>
    <% if current_user %>
      <%= link_to 'Leave Comment', new_product_comment_path(@product) %>
    <% end %>
  </div>
</div>
<% end %>
